generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("OPENFLEX_AC_POSTGRES_URL")
  directUrl    = env("OPENFLEX_AC_POSTGRES_URL_NON_POOLING")
  relationMode = "prisma"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model Hero {
  id       Int    @id @default(1)
  title    String
  subtitle String
  imageUrl String
}

model About {
  id          Int    @id @default(1)
  title       String
  description String
  imageUrl    String
}

model Service {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  features    String
  imageUrl    String
}

model Client {
  id      Int    @id @default(autoincrement())
  name    String
  logoUrl String
  order   Int    @default(0)
}

model Faq {
  id       Int    @id @default(autoincrement())
  question String
  answer   String
  order    Int    @default(0)
}

model Contact {
  id    Int    @id @default(1)
  email String
  phone String
}
